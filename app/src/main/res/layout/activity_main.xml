<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mitlerda.aryanne.mitlerdapriceconvertor.MainActivity">

    <Spinner
        android:id="@+id/from_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/from_sub_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/from_spinner"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/from_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/from_sub_spinner"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Spinner
        android:id="@+id/to_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/from_value"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/to_sub_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/to_spinner"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/to_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/to_sub_spinner"
        android:layout_marginStart="29dp"
        android:layout_marginTop="22dp"
        android:ems="10" />

</RelativeLayout>
